<mujoco model="dog scene">
  <option gravity="0 0 -9.81"/>
  <include file="dog.xml"/>

  <statistic center="0 0 0.8" extent="0.8"/>

  <visual>
    <headlight diffuse="0.1 0.1 0.1" ambient="0.3 0.3 0.3" specular="0 0 0"/>
    <rgba haze="0.0 0.0 0.0 0"/>
    <global offwidth="1920" offheight="1080"/>
  </visual>

  <default>
  <geom group="2" rgba="0.5 0.5 0.9 0.4"/> 
</default>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3"
      markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>
  </asset>

  <worldbody>
  <body name="obstacle_box" pos="1 0 0.15">
    <geom type="box" size="0.025 0.5 0.15" rgba="0.7 0.7 0.7 1" contype="1" conaffinity="1"/>
  </body>

  <body name="steps_and_platform">
    <geom name="ground" type="plane" size="50 50 0.3" pos="0 0 0" material="groundplane" contype="1" conaffinity="1" />

    <light name="light" pos="0 0 5" dir="0 0 -1" directional="true" />

    <geom name="step1" type="box" size="0.15 5 0.05" pos="5.15 0 0.05" rgba="0.4 0.4 0.4 1"/>
    
    <geom name="step2" type="box" size="0.15 5 0.1" pos="5.45 0 0.1" rgba="0.5 0.5 0.5 1"/>
    
    <geom name="step3" type="box" size="0.15 5 0.15" pos="5.75 0 0.15" rgba="0.6 0.6 0.6 1"/>
    
    <geom name="step4" type="box" size="0.15 5 0.2" pos="6.05 0 0.2" rgba="0.7 0.7 0.7 1"/>

    <geom name="platform" type="box" size="0.5 5 0.2" pos="6.7 0 0.2" rgba="0.8 0.8 0.8 1"/>
  </body>
</worldbody>
</mujoco>
